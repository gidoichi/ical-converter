{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "branchConcurrentLimit": 0,
  "labels": ["dependencies"],
  "platformAutomerge": true,
  "schedule": "* * 1 * *",
  "packageRules": [
    {
      "matchPackagePatterns": [".*"],
      "groupName": "dependencies"
    }
  ]
}
