{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "branchConcurrentLimit": 0,
  "labels": [
    "dependencies"
  ],
  "schedule": "* 0 1-7 * 6",
  "packageRules": [
    {
      "groupName": "dependencies",
      "automerge": true,
      "addLabels": [
        "automerge"
      ],
      "recreateWhen": "always",
      "commitMessagePrefix": "[update:patch]",
      "commitMessageExtra": null,
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
